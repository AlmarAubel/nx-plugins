{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:nx",
                "onlyDependOnLibsWithTags": [
                  "scope:nx",
                  "scope:esbuild",
                  "scope:vite",
                  "scope:snowpack"
                ]
              },
              {
                "sourceTag": "scope:esbuild",
                "onlyDependOnLibsWithTags": ["scope:esbuild"]
              },
              {
                "sourceTag": "scope:vite",
                "onlyDependOnLibsWithTags": ["scope:vite"]
              },
              {
                "sourceTag": "scope:snowpack",
                "onlyDependOnLibsWithTags": ["scope:snowpack"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
