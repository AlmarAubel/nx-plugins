{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Nx-Plugin-ESBuild-Init",
  "title": "Creating projects using ESBuild",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which name would you like to use"
    },
    "type": {
      "type": "string",
      "enum": ["application", "library"],
      "description": "Which type would you like to create",
      "default": "application"
    },
    "entry": {
      "type": "string",
      "alias": "e",
      "description": "Which file should be used as entry point?",
      "x-prompt": "Which file should be used as entry point?(src/main.ts by default)"
    },
    "watch": {
      "type": "boolean",
      "alias": "w",
      "description": "Enable Build Watching?",
      "x-prompt": "Enable Build Watching?",
      "default": false
    },
    "tsConfigPath": {
      "type": "string",
      "alias": "p",
      "description": "Specify tsconfig path(absolute path like `apps/your-app/tsconfig.specific.json`)",
      "x-prompt": "Specify tsconfig path(absolute path like `apps/your-app/tsconfig.specific.json`)"
    },
    "outputPath": {
      "type": "string",
      "alias": "o",
      "description": "Specify output path(absolute path like `specified-dist/apps/your-app`)",
      "x-prompt": "Specify output path(absolute path like `specified-dist/apps/your-app`)"
    },
    "useTSCPluginForDecorator": {
      "type": "boolean",
      "alias": "d",
      "description": "Use TSC for decorator compilation(or will throw an error if decorators detected)",
      "x-prompt": "Use TSC for decorator compilation(or will throw an error if decorators detected)",
      "default": true
    }
  },
  "required": ["name"]
}
