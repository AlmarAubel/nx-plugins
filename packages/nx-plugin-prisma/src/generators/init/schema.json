{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Init",
  "title": "",
  "type": "object",
  "properties": {
    "app": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "Which app would you like to init Prisma?"
    },
    "directory": {
      "type": "string",
      "alias": "d",
      "description": "A directory where the project is located"
    },
    "prisma-directory": {
      "type": "string",
      "alias": "p",
      "description": "A directory where the prisma schema is located",
      "default": "src/apps/prisma"
    },
    "schema-name": {
      "type": "string",
      "alias": "s",
      "description": "Prisma schema file name",
      "default": "schema"
    },
    "datasource-provider": {
      "type": "string",
      "enum": ["sqlite", "postgresql", "mysql", "sqlserver"],
      "description": "Prisma datasource provider",
      "default": "sqlite"
    },
    "use-project-env": {
      "type": "boolean",
      "description": "Create env file inside project",
      "default": true
    },
    "client-provider": {
      "type": "string",
      "enum": ["prisma-client-js"],
      "description": "Prisma client provider",
      "default": "prisma-client-js"
    },
    "watch": {
      "type": "boolean",
      "description": "Watch the schema.prisma file and re-generate Prisma Client on file changes",
      "default": false
    },
    "initial-schema": {
      "type": "boolean",
      "description": "Create model definitions for generated schema",
      "default": true
    }
  },
  "required": ["app"]
}
