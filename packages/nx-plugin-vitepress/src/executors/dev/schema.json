      "default": {}
    },
    "watch": {
      "type": "object",
      "properties": {},
      "additionalProperties": false,
      "default": {}
    },
    "cors": {
      "oneOf": [
        {
          "type": "object",
          "properties": {},
          "additionalProperties": false,
          "default": {}
        },
        {
          "type": "boolean"
        }
      ],
      "default": true
    },
    "hmr": {
      "oneOf": [
        {
          "type": "object",
          "properties": {},
          "additionalProperties": false,
          "default": {}
        },
        {
          "type": "boolean"
