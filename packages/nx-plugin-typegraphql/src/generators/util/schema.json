{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "type-graphql-util",
  "title": "Create TypeGraphQL Utility",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "x-prompt": {
        "message": "Which utility would you like to create?",
        "type": "list",
        "items": [
          { "value": "Directive", "label": "Directive" },
          { "value": "Scalar", "label": "Scalar" },
          { "value": "Plugin", "label": "Plugin" },
          { "value": "Extension", "label": "Extension" },
          { "value": "Decorator", "label": "Decorator" }
        ]
      },
      "description": "Which utility would you like to createï¼Ÿ"
    },
    "name": {
      "type": "string",
      "description": "Which name would you like to use?",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "appOrLib": {
      "type": "string",
      "description": "Which app or lib would you like to use?",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "directory": {
      "type": "string",
      "alias": "d",
      "description": "A directory where the util is placed"
    }
  },
  "required": ["type", "name", "appOrLib"]
}
