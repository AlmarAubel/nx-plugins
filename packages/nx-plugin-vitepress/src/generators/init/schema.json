{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Init",
  "title": "",
  "type": "object",
  "properties": {
    "app": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "alias": "d",
      "description": "Which directory would you like to use?",
      "$default": {
        "$source": "argv",
        "index": 1
      }
    },
    "overrideTargets": {
      "type": "boolean",
      "description": "Use vite-build or build as target name?",
      "default": true
    },
    "generateViteConfig": {
      "type": "boolean",
      "description": "Generate vite.config.ts?",
      "default": true
    },
    "generateConfig": {
      "type": "boolean",
      "description": "Generate .vitepress/config.js?",
      "default": true
    }
  },
  "required": ["app"]
}
