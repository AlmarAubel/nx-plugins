    },
    "viteConfigPath": {
      "type": "string"
    },
    "host": {
      "type": "string",
      "default": "localhost"
    },
    "port": {
      "type": "number",
      "default": 3000
    },
    "open": {
      "oneOf": [
        {
          "type": "boolean"
        },
        {
