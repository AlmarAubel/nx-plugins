{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "Build executor",
  "description": "",
  "type": "object",
  "properties": {
    "entryFiles": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "entryFiles"
    },
    "outDir": {
      "type": "string",
      "description": "outDir"
    },
    "outFile": {
      "type": "string",
      "description": "outFile"
    },
    "publicUrl": {
      "type": "string",
      "description": "publicUrl"
    },
    "cache": {
      "type": "boolean",
      "description": "cache",
      "default": true
    },
    "cacheDir": {
      "type": "string",
      "description": "cacheDir"
    },
    "contentHash": {
      "type": "boolean",
      "description": "contentHash",
      "default": true
    },
    "minify": {
      "type": "boolean",
      "description": "minify",
      "default": false
    },
    "scopeHoist": {
      "type": "boolean",
      "description": "scopeHoist",
      "default": false
    },
    "target": {
      "type": "string",
      "enum": ["browser", "node", "electron"],
      "description": "target",
      "default": "browser"
    },
    "logLevel": {
      "type": "number",
      "description": "logLevel"
    },
    "sourceMaps": {
      "type": "boolean",
      "description": "sourceMaps",
      "default": false
    },
    "bundleNodeModules": {
      "type": "boolean",
      "description": "bundleNodeModules",
      "default": false
    },
    "hmr": {
      "type": "boolean",
      "description": "hmr",
      "default": true
    },
    "autoInstall": {
      "type": "boolean",
      "description": "autoInstall",
      "default": true
    }
  },
  "additionalProperties": true,
  "required": ["entryFiles"]
}
