{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "id": "Application",
  "title": "",
  "type": "object",
  "properties": {
    "app": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "directory": {
      "type": "string",
      "alias": "d",
      "description": "Which directory would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    }
  },
  "required": ["app"]
}
